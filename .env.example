# =============================================================================
# Docker Local Development Environment
# Copy this to .env and update values before starting containers
#
# SECURITY: After adding real secrets, encrypt with:
#   docker compose exec php-fpm php artisan env:encrypt --env=local
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Laravel
APP_ENV=local
# APP_KEY must be set here for Docker Compose to pass it to containers.
# Generate with: docker compose exec php-fpm php artisan key:generate
# Then copy the value from src/.env to here.
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# -----------------------------------------------------------------------------
# Database (PostgreSQL) - CHANGE THESE VALUES
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Session / Cache / Queue
# -----------------------------------------------------------------------------
SESSION_DRIVER=redis
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# -----------------------------------------------------------------------------
# Docker Settings
# -----------------------------------------------------------------------------
NGINX_PORT=80
NGINX_PORT_APP2=8081
POSTGRES_PORT=5432
REDIS_PORT=6379

# User/Group IDs (run `id -u` and `id -g` to get your values)
UID=1000
GID=1000

# -----------------------------------------------------------------------------
# Xdebug (development only)
# -----------------------------------------------------------------------------
XDEBUG_ENABLED=true
XDEBUG_HOST=host.docker.internal
XDEBUG_IDE_KEY=DOCKER
